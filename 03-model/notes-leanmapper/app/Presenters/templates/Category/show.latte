{varType App\Model\Entities\Category $category}
{block content}

<h1 n:block="title">Kategorie {$category->title}</h1>
<p n:ifcontent>
    {$category->description}
</p>

{foreach $category->notes as $note}
 <div style="background-color: lightblue">
     <h3>{$note->title}</h3>
     <p>{$note->text}</p>
 </div>
{/foreach}

<div class="my-4">
    <a href="{link list}" class="btn btn-light">&larr; zpět na seznam kategorií</a>
</div>